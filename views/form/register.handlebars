<main>
    <h1>Please register</h1>
    <form action="/login/register" method="POST" id="register-form">
        <div>
            <label for="user-username">username(Must be unique): </label>
            <input id="userName" type="text" name="userNames"/>
        </div>
        <div>
            <label for="user-lastname">lastName: </label>
            <input id="lastName" type="text" name="lastNames"/>
        </div>
        <div>
            <label for="user-firstname">firstName: </label>
            <input id="firstName" type="text" name="firstNames"/>
        </div>
        <div>
            <label for="user-email">Email(Must be unique): </label>
            <input id="userEmail" type="text" name="userEmails"/>
        </div>
        <div>
            <label for="user-password">password: </label>
            <input id="password" type="password" name="passwords"/>
        </div>
        <div>
            <label for="confirm-password">confirmPassword: </label>
            <input id="confirmPassword" type="password" name="confirms"/>
            {{#if status1}}
                <div id="registering-checking" class="compare-password">{{compare}}</div>
            {{/if}}
            {{!-- <li>{{errors}}</li> --}}
            </div>
        <div>
		    <button type="submit" name="registers" id="button">Submit</button>
	    </div>
    </form>
</main>